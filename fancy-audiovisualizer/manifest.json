{
  "id": "fancy-audiovisualizer",
  "name": "Fancy Audiovisualizer",
  "version": "1.0.3",
  "minNoctaliaVersion": "3.7.2",
  "author": "Noctalia Team",
  "license": "MIT",
  "repository": "https://github.com/noctalia-dev/noctalia-plugins",
  "description": "Lemmy's fancy audio visualizer with reactive rings, inspired by NCS.",
  "entryPoints": {
    "desktopWidget": "DesktopWidget.qml",
    "settings": "Settings.qml"
  },
  "dependencies": {
    "plugins": []
  },
  "metadata": {
    "defaultSettings": {
      "sensitivity": 1.5,
      "showRings": true,
      "showBars": true,
      "rotationSpeed": 0.5,
      "barWidth": 0.6,
      "ringOpacity": 0.8,
      "bloomIntensity": 0.5
    }
  }
}
